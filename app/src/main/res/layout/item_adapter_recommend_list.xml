<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:fresco="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="90dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="5dp"
                                    app:cardBackgroundColor="@color/white"
                                    app:cardCornerRadius="1dp"
                                    app:cardElevation="1dp">

    <RelativeLayout
        android:background="@drawable/ripple_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/img_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            fresco:roundedCornerRadius="14px"
            />

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/img_icon"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img_icon"
            android:text="12231"
            android:textColor="@color/text_color_recomment_title"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/txt_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txt_title"
            android:layout_below="@+id/txt_title"
            android:ellipsize="end"
            android:maxEms="10"
            android:maxLines="1"
            android:text="asa"
            android:textColor="@color/text_color_recomment_summary"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/txt_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img_icon"
            android:layout_alignLeft="@+id/txt_title"
            android:text="123"
            android:textColor="@color/text_color_recomment_size"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/txt_get_coin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="26dp"
            android:drawableRight="@mipmap/goldcoin_small"
            android:text="+0"
            android:textColor="@color/text_color_recomment_coin"
            android:textSize="16sp"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>