<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="30dp"
              android:layout_marginTop="90dp"
              android:background="#10FFFFFF"
              android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/rel_coin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/img_icon_surplus_coin"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_centerVertical="true"
                android:background="@mipmap/icon_make_gold"/>

            <TextView
                android:id="@+id/txt_surplus_coin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/img_icon_surplus_coin"
                android:lines="1"
                android:text="@string/surplus_coin"
                android:textColor="@color/white"
                android:textSize="12sp"/>
        </RelativeLayout>

        <View
            android:id="@+id/view_line1"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="#A0D4D4D4"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/view_line1"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/img_icon_surplus_time"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_centerVertical="true"
                android:background="@mipmap/icon_time"/>

            <TextView
                android:id="@+id/txt_surplus_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/img_icon_surplus_time"
                android:lines="1"
                android:text="@string/surplus_time"
                android:textColor="@color/white"
                android:textSize="12sp"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>