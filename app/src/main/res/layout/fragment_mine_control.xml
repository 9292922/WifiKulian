<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

    <RelativeLayout
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/app_task_item_bg_with_shadow">
        <ImageView
            android:id="@+id/img_sign_in_everyday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/calendar"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="@string/sign_in_everyday"
            android:layout_toRightOf="@+id/img_sign_in_everyday"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:textColor="@color/sign_txt_color"/>
    </RelativeLayout>

</RelativeLayout>